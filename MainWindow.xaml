<Window x:Class="Analogwertrechner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Analogwertrechner"
        mc:Ignorable="d"
        Title="Analogwertrechner" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="10px"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="10px"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="10px"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="70px"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70px"></RowDefinition>
            <RowDefinition Height="20px"></RowDefinition>
            <RowDefinition Height="10px"></RowDefinition>
            <RowDefinition Height="20px"></RowDefinition>
            <RowDefinition Height="10px"></RowDefinition>
            <RowDefinition Height="20px"></RowDefinition>
            <RowDefinition Height="10px"></RowDefinition>
            <RowDefinition Height="20px"></RowDefinition>
            <RowDefinition Height="20px"></RowDefinition>
            <RowDefinition Height="20px"></RowDefinition>
            <RowDefinition Height="20px"></RowDefinition>
            <RowDefinition Height="20px"></RowDefinition> <!-- Faktor -->
            <RowDefinition Height="30px"></RowDefinition>
            <RowDefinition Height="20px"></RowDefinition> <!-- Messwert Titel-->
            <RowDefinition Height="10px"></RowDefinition>
            <RowDefinition Height="20px"></RowDefinition> <!-- -> SPS Wert -->
            <RowDefinition Height="10px"></RowDefinition>
            <RowDefinition Height="20px"></RowDefinition> <!-- -> Analogwert -->
            <RowDefinition Height="10px"></RowDefinition>
            <RowDefinition Height="20px"></RowDefinition>
            <RowDefinition Height="10px"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Red" FontWeight="Bold" FontSize="20" >Eingabe ungültig</TextBlock>

        <TextBlock Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center">SPS Wert</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center">Analogwert</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="7" VerticalAlignment="Center" HorizontalAlignment="Center">Realer Wert</TextBlock>
       
        <TextBlock Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">Einheit</TextBlock>
        <TextBlock Grid.Row="3" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center">-</TextBlock>
        <TextBox Grid.Row="3" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="100" Name="txtBoxEinheitAnalog" HorizontalContentAlignment="Center" >mA</TextBox>
        <TextBox Grid.Row="3" Grid.Column="7" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="100" Name="txtBoxEinheitReal" HorizontalContentAlignment="Center">V</TextBox>

        <TextBlock Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">Minimaler Wert</TextBlock>
        <TextBox Grid.Row="5" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="100" Name="txtBoxMinWertSps" HorizontalContentAlignment="Right">0</TextBox>
        <TextBox Grid.Row="5" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="100" Name="txtBoxMinWertAnalog" HorizontalContentAlignment="Right">4</TextBox>
        <TextBox Grid.Row="5" Grid.Column="7" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="100" Name="txtBoxMinWertReal" HorizontalContentAlignment="Right">0</TextBox>

        <TextBlock Grid.Row="7" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">Maximaler Wert</TextBlock>
        <TextBox Grid.Row="7" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="100" Name="txtBoxMaxWertSps" HorizontalContentAlignment="Right">32767</TextBox>
        <TextBox Grid.Row="7" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="100" Name="txtBoxMaxWertAnalog" HorizontalContentAlignment="Right">20</TextBox>
        <TextBox Grid.Row="7" Grid.Column="7" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="100" Name="txtBoxMaxWertReal" HorizontalContentAlignment="Right">24</TextBox>

        <TextBlock Grid.Row="9" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">Messwert</TextBlock>
        <TextBox Grid.Row="9" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="100" Name="txtBoxMesswertSps" HorizontalContentAlignment="Right">10000</TextBox>
        <TextBox Grid.Row="9" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="100" Name="txtBoxMesswertAnalog" HorizontalContentAlignment="Right">10</TextBox>
        <TextBox Grid.Row="9" Grid.Column="7" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="100" Name="txtBoxMesswertReal" HorizontalContentAlignment="Right">10</TextBox>

        <TextBlock Grid.Row="11" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">Faktor</TextBlock>
        <TextBlock Grid.Row="11" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" Name="txtFaktorSps">?</TextBlock>
        <TextBlock Grid.Row="11" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Name="txtFaktorAnalog">?</TextBlock>
        <TextBlock Grid.Row="11" Grid.Column="7" VerticalAlignment="Center" HorizontalAlignment="Center" Name="txtFaktorReal">?</TextBlock>

        <Separator Grid.Row="12" Grid.Column="1" Grid.ColumnSpan="7" VerticalAlignment="Center"/>
        <TextBlock Grid.Row="13" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">Messwert</TextBlock>
        <TextBlock Grid.Row="13" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center">entspricht</TextBlock>

        <TextBlock Grid.Row="15" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">SPS Wert</TextBlock>
        <TextBlock Grid.Row="15" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" Name="txtSpsSps">-</TextBlock>
        <TextBlock Grid.Row="15" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Name="txtSpsAnalog">?</TextBlock>
        <TextBlock Grid.Row="15" Grid.Column="7" VerticalAlignment="Center" HorizontalAlignment="Center" Name="txtSpsReal">?</TextBlock>

        <TextBlock Grid.Row="17" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">Analogwert</TextBlock>
        <TextBlock Grid.Row="17" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" Name="txtAnalogSps">?</TextBlock>
        <TextBlock Grid.Row="17" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Name="txtAnalogAnalog">-</TextBlock>
        <TextBlock Grid.Row="17" Grid.Column="7" VerticalAlignment="Center" HorizontalAlignment="Center" Name="txtAnalogReal">?</TextBlock>

        <TextBlock Grid.Row="19" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">Realer Wert</TextBlock>
        <TextBlock Grid.Row="19" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center" Name="txtRealSps">?</TextBlock>
        <TextBlock Grid.Row="19" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" Name="txtRealAnalog">?</TextBlock>
        <TextBlock Grid.Row="19" Grid.Column="7" VerticalAlignment="Center" HorizontalAlignment="Center" Name="txtRealReal">-</TextBlock>
    </Grid>
</Window>
